const getDropdownColor = (bgColor) => {
  const colorMap = {
    'bg-red-500': '#ef4444',
    'bg-red-600': '#dc2626',
    'bg-blue-600': '#2563eb',
    'bg-purple-600': '#9333ea',
    'bg-purple-700': '#7e22ce'
